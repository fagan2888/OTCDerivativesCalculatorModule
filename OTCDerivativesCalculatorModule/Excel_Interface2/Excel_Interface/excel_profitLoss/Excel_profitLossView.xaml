            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="History P/L" />
                    <Button Content="load" Click="PLHistoryLoadButton_Click" />
                </StackPanel>
                <DataGrid Name="historyPL_DataGrid_"/>
