            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Dividend :" />
                <TextBox Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Volatility :" />
                <TextBox Width="80"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
